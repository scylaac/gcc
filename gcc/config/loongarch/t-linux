MULTILIB_OPTIONS = mabi=lp64 mfloat-abi=soft/mfloat-abi=single
MULTILIB_EXCLUSIONS = mabi=lp64/mfloat-abi=single
MULTILIB_DIRNAMES = lp64 soft-fp single-fp
MULTILIB_REQUIRED = mabi=* mabi=*/mfloat-abi=*
MULTILIB_OSDIRNAMES = ../lib64$(call if_multiarch,:loongarch64-linux-gnu)
MULTILIB_OSDIRNAMES += soft-fp$(call if_multiarch,:loongarch64-linux-gnu)
MULTILIB_OSDIRNAMES += single-fp$(call if_multiarch,:loongarch64-linux-gnu)
